				li
					span.modal_branch-list--title звонок бесплатный по России
					a.modal_branch-list--phone(href='tel:+79128005588') #[i.modal_branch-list--icon.modal_branch-list--icon_phone ] +7 (912) 800-55-88
				li
					span.modal_branch-list--title электронная почта
					a.modal_branch-list--link(href='mailto:info@texnika-profi.ru') #[i.modal_branch-list--icon.modal_branch-list--icon_email ] info@texnika-profi.ru
		.modal_branch__rc
			span.modal_branch__rc--title Схема проезда
			.modal_branch--map
