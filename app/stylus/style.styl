		&_link
			position relative
			color colorOrange
			padding-left 7px
			
			&:after
				content ''
				position absolute
				left 7px
				bottom 0
				width calc(100% - 7px)
				border-bottom 1px dashed colorOrange
				transition opacity .2s ease
				opacity 0
			
			&:hover
				&:after
					opacity 0.5
					
	&__nav
