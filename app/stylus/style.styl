// Fonts

@import './mixins/fonts.styl'
webfont('Roboto', 'roboto-regular', normal)
webfont('Roboto', 'roboto-light', 300)
webfont('Roboto', 'roboto-medium', 500)
webfont('Roboto', 'roboto-bold', bold)
webfont('Myriad Pro', 'myriad-pro-regular', normal)
webfont('Source Sans Pro', 'source-sans-pro-regular', normal)
webfont('Source Sans Pro', 'source-sans-pro-semibold', 600)
webfont('Source Sans Pro', 'source-sans-pro-bold', bold)

// Variables

colorBlack = #000000
colorWhite = #ffffff
colorDark = #303030
colorGrey = #666666
colorOrange = #ff7a08
colorBlue = #75c9ea

// Default

html
	height 100%
	*
		max-height 1000000px
		vertical-align top
		box-sizing border-box

	*:before,
	*:after 
		vertical-align top
		box-sizing border-box

body
	width 100%
	height 100%
	color colorBlack
	font-size 12px
	line-height 16px
	font-family 'Roboto', sans-serif
	padding 0
	margin 0
	background #f8f8f8
	-webkit-tap-highlight-color transparent
	
p
	text-indent 0
	padding 0
	margin 0 0 16px

table
	margin 0 0 16px
	border-collapse collapse
	td
		padding 0

:focus
	outline none

img
	padding 0
	margin 0
	border 0

a
	color colorBlack
	text-decoration none
	&:hover
		text-decoration none

form
	margin 0

ul 
	margin 0 0 10px 16px
	padding 0
	li
		padding 0 
		list-style none

ol
	margin 0 0 10px 18px
	padding 0
	li
		padding 0 0 0 16px	

input,
select,
textarea
	color colorBlack
	font-size 12px
	font-family 'Roboto', sans-serif
	padding 0
	margin 0
	background none
	border 0
	box-sizing border-box

textarea
	overflow auto

button
	font-family 'Roboto', sans-serif
	margin 0
	border 0
	box-sizing border-box
	&::-moz-focus-inner
		padding 0
		border 0

::-webkit-input-placeholder
	color #a1a1a1

:-moz-placeholder
	color #a1a1a1

::-moz-placeholder
	color #a1a1a1

:-ms-input-placeholder
	color #a1a1a1

.img-cover,
.img-contain
	display none !important

// Libs

